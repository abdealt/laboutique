{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1 class="">
            Connexion
        </h1>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label class="mt-3" for="username">Votre email :</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label class="mt-3" for="password">Vote mot de passe :</label>
            <input class="form-control" type="password" id="password" name="_password" required>

            <input type="hidden" name="_target_path" value="{{ 'app_account' }}">

            <button class="btn btn-success mt-3" type="submit">Se connecter</button>
        </form>

        <br/>
        Vous n'avez pas de compte ? <a class="mt-3" href="{{ path('app_register') }}">S'inscrire</a>
    </div>

{% endblock %}
